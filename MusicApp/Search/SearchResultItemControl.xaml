<UserControl x:Class="MusicApp.Search.SearchResultItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Width="283">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image x:Name="image" HorizontalAlignment="Left" Width="80" Height="80" Margin="15" />

        <StackPanel VerticalAlignment="Center" Margin="100,0,10,0">
            <TextBlock x:Name="title" FontWeight="Bold" FontSize="18" Foreground="DarkViolet" Margin="0,0,0,5" Width="173"/>
            <TextBlock x:Name="subTitle1" FontSize="14" Foreground="White" Margin="0,0,0,5" />
            <TextBlock x:Name="subTitle2" FontSize="14" Foreground="White" Margin="0,0,0,5" />
            <TextBlock x:Name="subTitle3" FontSize="14" Foreground="White" Margin="0,0,0,5" />
        </StackPanel>
    </Grid>
</UserControl>

